<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table-players" author="Dmitry" >
        <createSequence  cacheSize="1"
                         cycle="false"
                         dataType="BIGINT"
                         incrementBy="1"
                         maxValue="9223372036854775807"
                         minValue="1"
                         sequenceName="seq_id"
                         startValue="1"
        />


        <createTable tableName="users-liquibase">
            <column name="id" type="BIGINT" defaultValueSequenceNext="seq_id">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="account" type="NUMERIC"/>
        </createTable>

    </changeSet>
</databaseChangeLog>